@model AttendanceSystem.Models.AddAttendanceViewModel

<h1>Add Attendance</h1>

<form method="post" asp-action="Add" asp-controller="Attendance">
    <div class="mt-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="Id" />
    </div>
    <div class="mt-3">
        <label class="form-label">Student ID</label>
        <input type="text" class="form-control" asp-for="StudentId" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
