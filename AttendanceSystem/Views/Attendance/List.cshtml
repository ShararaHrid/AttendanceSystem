@{
}

@model List<AttendanceSystem.Models.Entities.Attendance>

<h1>Attendance</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Student ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.StudentId</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Attendance" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
